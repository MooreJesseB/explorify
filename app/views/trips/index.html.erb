<%= render partial: "shared/center_col_header" %>

<% if @current_user %>
  <a href="/trips/new"><h3 class="text-center">Create a new journey!</h3></a><br><br>
<% end %>

<h1 class="text-center">Previous Journeys</h1>

<% @trips_arr.each do |trip| %>
  <ul>
    <h3><%= trip["trip"].title %></h3>
    <li><%= trip["trip"].date_start %></li>
    <li><%= trip["trip"].date_end %></li>
    <li><%= trip["trip"].description %></li>
    <% if trip["rand_img"] %>
    <!-- random image from media for this trip -->
      <li><img src ="<%= trip['rand_img'] %>"</li>
    <% end %>
  </ul><br>
<% end %>

<%= render partial: "shared/div_footer" %>