<body class="tripbody">
<div class="container" style="z-index:-100">
  <h2 class="insta text-center">Browse journeys</h2>
  <br>
  <br>
  <div class="all" style= "border-radius: 1%;">
    <div class="row">
      <% @trips_arr.each do |trip| %>
        <div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
            <h3 class="text-center"><%= trip["trip"].title %></h3>
         <!--    <li><%= trip["trip"].date_start %></li>
            <li><%= trip["trip"].date_end %></li>
            <li><%= trip["trip"].description %></li> -->
            <% if trip["rand_img"] %>
              <!-- random image from media for this trip -->
              <img src ="<%= trip['rand_img'] %>"
              <a href="/trips/<%= trip["trip"]["id"].to_s %>"><img src ="<%= trip['rand_img'] %>"></a>
            <% end %>
          <br>
        </div>
      <% end %>
    </div>
  </div>
</div>
</body>
