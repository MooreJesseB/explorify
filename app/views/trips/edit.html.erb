<body class="background-trips">
	<% if @medias.length == 0 %>
	  <h2>This journey has no media!</h2>
	<% end %>
	<div class="tripbody">

	<div class="container">
		<div class="row">
		<br>
		<br>
		<div class="col-lg-12 text-center">
		<h3 class="insta"><%= @trip.title %></h3>
		<h3><%= @trip.date_start.to_time.to_s.slice(0..9)%> to <%= @trip.date_end.to_time.to_s.slice(0..9)%></h3>
		<p style="color:black"><%= @trip.description %></p>
		<br>
		<br>
		
		<br>
		<br>

	<!-- 	</div> -->
		</div>
	</div>


	<div class="container">
	<div class="all" style= "border-radius: 1%;">
	<div class="row">
	<% @medias.each do |media| %>
			<div class="col-lg-3 col-md-3 col-sm-3 col-xs-12">
				<!-- <p>Created at: <%= media.date_taken %></p> -->
				<img src="<%= media.thumbnail %>" style = "border-radius: 4%; width:187px; height:150px;">
					<%= button_to "Delete", trip_media_path(@trip, media), method: :delete, class: "btn btn-default" %>
			</div>
				<%# button_to "Edit media", edit_trip_media_path(@trip, media), method: :get, class: "btn btn-default" %>
	<% end %> 
	</div>

	<div class="row">	
			<div class="col-lg-12 text-center">
				<%= button_to "Delete All", trip_path, method: :delete, class: "btn btn-default" %> 
			</div>
		</div>
	</div>
	</div>
	</div>
	</div>
</body>